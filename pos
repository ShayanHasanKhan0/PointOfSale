
from tkinter import *

root = Tk()
root.geometry("500x500")



frame1 = Frame(root)

button1 = Button(frame1, text="Button 1")

frame1.grid(row= 1, column=1)

button1.pack()

frame2 = Frame(root)

button2 = Button(frame2, text="Button 2")

button2.pack()

frame2.grid(row= 1, column=2)

def Showframe():

 frame1.grid_forget()
 frame2.grid()

Showframe()


root.mainloop()
